<Window x:Class="woordenboekoef.Loginwindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:woordenboekoef"
        mc:Ignorable="d"
        Title="Loginwindow" Height="450" Width="800">
    <Grid>
        <DockPanel HorizontalAlignment="Left"  LastChildFill="True" VerticalAlignment="Top" Width="792">
            <Image DockPanel.Dock="left" Width="228" Stretch="Fill" />

            <StackPanel  Width="438" Height="328" >
                <TextBlock x:Name="TextBlockUser" Text="Gebruikersnaam: " FontSize="28" FontFamily="Tempus Sans ITC"/>
                <TextBox x:Name="TxtUser"  FontSize="32" FontFamily="Tempus Sans ITC" Margin="0,15,0,0" HorizontalContentAlignment="Center" Text="Patricia Briers"/>
                <TextBlock x:Name="TextBlockPassword" Text="Wachtwoord: " FontSize="28" FontFamily="Tempus Sans ITC" Margin="0,15,0,0"/>
                <Button DockPanel.Dock="Bottom" Content="Ok" Height="33"  Width="130" FontSize="16" Margin="0,50,0,0"  Click="BtnOk_Click" IsDefault="True"/>
            </StackPanel>



        </DockPanel>

    </Grid>
</Window>
